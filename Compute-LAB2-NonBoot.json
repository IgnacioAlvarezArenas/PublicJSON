{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
         "adminUsername": {
            "type": "String"
        },
        "adminPassword": {
            "type": "SecureString"
        }
      },
    "variables": {
       
    },
    "resources": [
         
 { "apiVersion": "2019-11-01",
       "type": "Microsoft.Network/networkSecurityGroups",
      "name": "AzureCXP_LAB2_NonBoot_NSG",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "rdp_rule",
            "properties": {
              "description": "Allow RDP",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          
        }]
      }
          },

{
      "apiVersion": "2018-10-01",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "AzureCXP_LAB2_NonBoot_VNET",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        }
      },
      "resources": [
        {
          "apiVersion": "2018-10-01",
          "type": "subnets",
          "location": "[resourceGroup().location]",
          "name": "AzureCXP_LAB2_NonBoot_VNET_subnet1",
          "dependsOn": [
            "AzureCXP_LAB2_NonBoot_VNET"
          ],
          "properties": {
            "addressPrefix": "10.0.0.0/24"
          }
        }
      ]
    },              
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "name": "AZCXP-COM-LAB2c-nic1",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "AZCXP-COM-LAB2c-pip1",
                "AzureCXP_LAB2_NonBoot_VNET_subnet1"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig-AZCXP-COM-LAB2c",
                        "properties": {
                            "subnet": {
                                "id": "[concat(resourceGroup().id,'/providers/Microsoft.Network/virtualNetworks/AzureCXP_LAB2_NonBoot_VNET/subnets/AzureCXP_LAB2_NonBoot_VNET_subnet1')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[concat(resourceGroup().id,'/providers/Microsoft.Network/publicIpAddresses/AZCXP-COM-LAB2c-pip1')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[concat(resourceGroup().id,'/providers/Microsoft.Network/networkSecurityGroups/AzureCXP_LAB2_NonBoot_NSG')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/PublicIPAddresses",
            "apiVersion": "2019-02-01",
            "name": "AZCXP-COM-LAB2c-pip1",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIpAllocationMethod": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "name": "AZCXP-COM-LAB2c",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "Microsoft.Network/networkInterfaces/AZCXP-COM-LAB2c-nic1"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2s_v3"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "imageReference": {
                    "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "2016.127.20190416"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[concat(resourceGroup().id,'/providers/Microsoft.Network/networkInterfaces/AZCXP-COM-LAB2c-nic1')]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "AZCXP-COM-LAB2c",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": true
                    }
             
            }
        }           
        
        },
         {
                "apiVersion": "2018-06-01",
                "type": "Microsoft.Compute/virtualMachines/extensions",
                "name": "AZCXP-COM-LAB2c/CustomScriptExtension",
                "location": "[resourceGroup().location]",
                "dependsOn": [
                        "Microsoft.Compute/virtualMachines/AZCXP-COM-LAB2c"
                ],
                "properties": {
                    "publisher": "Microsoft.Compute",
                    "type": "CustomScriptExtension",
                    "typeHandlerVersion": "1.10",
                    "autoUpgradeMinorVersion": true,
                    "settings": {
                        "fileUris": [
                            "https://raw.githubusercontent.com/IgnacioAlvarezArenas/PublicJSON/master/Compute-LAB2-NonBoot.ps1"
                        ]
                    },
                    "protectedSettings": {
                        "commandToExecute": "[concat('Powershell -ExecutionPolicy Unrestricted -file \"' , 'Compute-LAB2-NonBoot.ps1')]"
                    
                    }
                }
            }
            

   
    ],
    "outputs": {
       
    }
}
